doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel="stylesheet", href="/css/edit.css")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    
    title Document
  body

    .container.d-flex.text-center.justify-content-center.pt-2
      .row
        //FORM
        .col-md-12
          .card
            .card-body
              form(action=`/update/${prod.id}`, method="POST", enctype="multipart/form-data")
                .form-group
                  input(type="text", name="title", placeholder="Inserte un titulo", class="form-control is-valid",required, value=`${prod.title}`)
                .form-group
                  input(type="text", name="price", placeholder="Inserte un precio", class="form-control  is-valid", required, value=`${prod.price}`)
                .form-group
                  textarea(name="description", cols="80", class="form-control is-valid", placeholder="Inserte descripcion", required, value=`${prod.description}`)
                .form-group
                  input(type="file", class="form-control-file is-valid", id="image", name="image", required)
                  br
                  img(src=`${prod.imageUrl}` class="rounded imgPriview" alt="")
                button(type="submit", class="btn btn-primary btn-block") Guardar

    script(src='/js/javascript.js')